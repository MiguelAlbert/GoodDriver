<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Heures minutes --> Heures centièmes"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etHeure1"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="H"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etMinute1"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2" />

                    <ImageButton
                        android:id="@+id/imageButtonDelete"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:cropToPadding="true"
                        android:src="@drawable/ic_baseline_clear_24" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonCalcul1"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="30dp"
                        android:cropToPadding="true"
                        android:src="@drawable/ic_baseline_arrow_right_24" />

                    <TextView
                        android:id="@+id/etKilometres"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/blue" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="Heures centièmes --> Heures minutes "
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etHeureCentieme2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="8"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/imageButtonDelete2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:cropToPadding="true"
                        android:src="@drawable/ic_baseline_clear_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonCalcul2"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="30dp"
                        android:cropToPadding="true"
                        android:src="@drawable/ic_baseline_arrow_right_24" />

                    <TextView
                        android:id="@+id/tvResultatHeure2"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="H"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvResultatMinute2"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/image" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>