<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Repos Hebdomadaire"
                android:textColor="#300505"
                android:textSize="20sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Début du repos :"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButtonDateDebut"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:src="@drawable/ic_baseline_calendar_today_24" />

                        <TextView
                            android:id="@+id/tVDateDebut"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <ImageButton
                            android:id="@+id/imageButtonHeureDebut"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:src="@drawable/ic_baseline_access_time_24" />

                        <TextView
                            android:id="@+id/tvHeureDebut"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center" />

                        <ImageButton
                            android:id="@+id/imageButtonDeleteDebut"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:src="@drawable/ic_baseline_clear_24" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Repos réduit réalisé à partir de :"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDateReposReduit"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center"
                            tools:ignore="SpeakableTextPresentCheck" />


                        <TextView
                            android:id="@+id/tvHeureReposReduit"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvTempsRestantReduit"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"/>

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_vertical"
                            android:text="Repos normal réalisé à partir de :"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDateReposNormal"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/tvHeureReposNormal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvTempsRestantNormal"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>