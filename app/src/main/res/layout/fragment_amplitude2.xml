<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Début d'amplitude"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButtonCalcul"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:src="@drawable/ic_baseline_calendar_today_24" />

                        <TextView
                            android:id="@+id/tvDateDebut"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <ImageButton
                            android:id="@+id/imageButtonCalcul1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:src="@drawable/ic_baseline_access_time_24" />

                        <TextView
                            android:id="@+id/tvHeureDebut"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center" />

                        <ImageButton
                            android:id="@+id/imageButtonDelete"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:src="@drawable/ic_baseline_clear_24" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Fin d'amplitude"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButtonDateFin"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:src="@drawable/ic_baseline_calendar_today_24" />

                        <TextView
                            android:id="@+id/tvDateFin"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <ImageButton
                            android:id="@+id/imageButtonHeureFin"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:src="@drawable/ic_baseline_access_time_24" />

                        <TextView
                            android:id="@+id/tvHeureFin"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_rectangle_order"
                            android:gravity="center" />

                        <ImageButton
                            android:id="@+id/imageButtonDeleteFin"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:src="@drawable/ic_baseline_clear_24" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="Repos journalier"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvReposNormal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center"
                        android:text="Normal\n11 heures"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvReposReduit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center"
                        android:text="Réduit\n9 heures"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="Reprise après repos journalier"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDateRepriseNormal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDateRepriseReduit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center"
                        android:textStyle="bold" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvHeureRepriseNormal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvHeureRepriseReduit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rectangle_order"
                        android:gravity="center"
                        android:textStyle="bold" />


                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp"
                    app:srcCompat="@drawable/img_2" />

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.gms.ads.AdView
            android:id="@+id/publisherAdView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>